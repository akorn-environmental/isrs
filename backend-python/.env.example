# Application Settings
APP_NAME="ISRS Database API"
APP_VERSION="2.0.0"
DEBUG=False
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@host/database
ASYNC_DATABASE_URL=postgresql+asyncpg://user:password@host/database

# Security
SECRET_KEY=generate-a-64-char-random-hex-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME="ISRS Platform"

# Magic Link Settings
MAGIC_LINK_EXPIRY_MINUTES=15
MAGIC_LINK_BASE_URL=https://your-frontend-domain.com

# Apollo.io API (for contact enrichment)
APOLLO_API_KEY=your-apollo-api-key

# Anthropic Claude API (for AI features)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
