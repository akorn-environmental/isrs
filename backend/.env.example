# Server Configuration
PORT=3002
NODE_ENV=development

# Claude AI Configuration
CLAUDE_API_KEY=sk-ant-api03-YOUR_KEY_HERE
CLAUDE_MODEL=claude-sonnet-4.5-20250929

# PostgreSQL Database (Render)
DATABASE_URL=postgresql://user:password@host/database

# Google Sheets Configuration (for migration only)
GOOGLE_SHEET_ID=your-sheet-id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Security
API_KEY=generate-a-secure-random-key
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feedback System
FEEDBACK_ADMIN_EMAIL=admin@example.com

# AWS SES (Email Service)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SES_FROM_EMAIL=noreply@your-domain.com
SES_FROM_NAME=ISRS

# Grants.gov API
GRANTS_GOV_API_KEY=your-grants-gov-api-key

# Contact Enrichment APIs
APOLLO_API_KEY=your-apollo-api-key

# Enable auto-enrichment when contacts are created/updated
ENABLE_AUTO_ENRICHMENT=false
